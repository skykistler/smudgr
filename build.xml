<?xml version="1.0" encoding="UTF-8"?>
<project name="smudgr" default="launch" basedir=".">
	
	<property name="class" value="io.smudgr.test.SkyShowApp"/> 
	
	<path id="classpath">
		<fileset dir="." includes="**/*.jar"/>
	</path>
	
	<target name="clean">
		<delete dir="bin"/>
	</target>
	
	<target depends="clean" name="compile">
		<mkdir dir="bin"/>
		<javac srcdir="src" destdir="bin" classpathref="classpath"/>
		<copy todir="bin/io/smudgr/ui" >  
		        <fileset dir="src/io/smudgr/ui" includes="**"/>  
		 </copy> 
	</target>
	
	<target depends="compile" name="run">
		<java classname="${class}" 
			  fork="true"
			  classpath="bin:lib/*:builds/win64/bin/*"/>
	</target>

	<target depends="compile, makejar, windowsLaunch, macLaunch" name="launch" />
	
	<target name="makejar">
		<jar jarfile="builds/smudgr.jar" includes="**/**" basedir="bin" />
	</target>
	
	<condition property="isMac">
		<os family="mac" />
	</condition>

	<condition property="isWindows">
		<os family="windows" />
	</condition>

	<target name="windowsLaunch" if="isWindows">
		<echo>Running Windows scripts...</echo>
		<copy file="./builds/smudgr.jar" todir="./builds/win64/bin" />
		<exec dir="./builds/win64/" executable="cmd">
	        <arg line="/c" />
			<arg line="run.bat" />
		</exec>
	</target>

	<target name="macLaunch" if="isMac">
		<echo>Running Mac scripts...</echo>
		<exec dir="." executable="/bin/sh">
			<arg line="builds/macosx64/compile.sh" />
		</exec>
	</target>
</project>